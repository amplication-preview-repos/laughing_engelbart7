datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Nft {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  name         String?
  owner        String?
  price        Float?
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
}

model Transaction {
  amount          Float?
  buyer           String?
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  nft             Nft?      @relation(fields: [nftId], references: [id])
  nftId           String?
  transactionDate DateTime?
  updatedAt       DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
